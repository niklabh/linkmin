extends layout

block content
  a(href='https://github.com/niklabh/miniUrl')
    img(style='position: absolute; top: 0; right: 0; border: 0;' src='http://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png' alt='Fork me on GitHub')
  .container
    h1= title
    h2 Welcome to #{title}
    h3 Enter URL to be shortned
    form#urlForm(method='post' action='/shortner', autocomplete='on')
      .url
        label(for='url') URL:
        input#url(name='url', type='url', required)
      .key
        label(for='key') KEY: #{host}/
        input#key(name='key', type='text')
      .submit(style="margin:30px")
        input#submit(type='submit', value='Shorten URL')
    include links
  script(src='/javascripts/client.js')
