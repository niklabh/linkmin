extends layout

block content
  include gitRibbon
  .container
    h1= title
    h2 Welcome to #{title}
    h3 Enter URL to be shortned
    form#urlForm(method='post', action='/shortner/create', autocomplete='on')
      .url.left
        label(for='url') URL:
        input#url(name='url', type='url', required)
      .key.left
        label(for='key') KEY: #{host}/
        input#key(name='key', type='text')
      .submit.left
        input#submit(type='submit', value='Shorten URL')
    .clear
    .restore 
      | Current session key: 
      b #{key}
      form(action='/', method='post', data-ajax='false')
        lable Restore session: 
        input#restorekey(name='key', type='text', value='')
        input#restorebutton(type='submit', value='restore')
    br
    include links
    include donate
